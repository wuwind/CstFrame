<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout"
    android:background="@color/color_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_margin_30">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:src="@drawable/selector_close" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_close"
                android:layout_marginTop="110dp"
                android:text="@string/account_login"
                android:textColor="@color/color_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_text_height"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:hint="@string/pls_enter_account"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/text_size_15"
                android:theme="@style/MyEditText" />

            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_text_height"
                android:layout_below="@+id/et_user_name"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:hint="@string/pls_enter_verify_code"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingRight="120dp"
                android:singleLine="true"
                android:textSize="@dimen/text_size_15"
                android:theme="@style/MyEditText" />

            <TextView
                android:id="@+id/tv_get_verify_code"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/et_verify_code"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginBottom="12dp"
                android:enabled="false"
                android:text="@string/get_verify_code"
                android:textColor="@color/selector_txt_app_theme_color"
                android:textSize="@dimen/text_size_15" />

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_alignBottom="@id/et_verify_code"
                android:layout_marginBottom="16dp"
                android:layout_toLeftOf="@id/tv_get_verify_code"
                android:background="@color/color_c3" />

            <EditText
                android:id="@+id/et_pwd"
                style="@style/PasswordEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_text_height"
                android:layout_below="@+id/et_verify_code"
                android:layout_marginTop="20dp"
                android:hint="@string/pls_set_pwd"
                android:inputType="textPassword"
                android:theme="@style/MyEditText" />

            <ImageView
                android:id="@+id/iv_pwd_see"
                style="@style/PassWordImageView"
                android:layout_alignTop="@id/et_pwd"
                android:layout_alignBottom="@id/et_pwd"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_pwd"
                android:text="@string/password_rule_tips"
                android:textSize="@dimen/text_size_12" />

            <Button
                android:id="@+id/btn_sure"
                style="@style/BottomLargeRoundBtnStyle"
                android:layout_below="@+id/tv_tips"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:text="@string/str_confirm" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>